<Page x:Class="GameThing.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameThing"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Collections">

    <Grid>

        <ListBox ItemsSource="{Binding CollectionList}" SelectedItem="{Binding SelectedCollection}" FontSize="46" HorizontalContentAlignment="Center" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="100,10,100,110" />

        <Grid Height="70" VerticalAlignment="Bottom" Margin="10,0,0,40">
            <Button Content="Go" FontSize="26" Width="100" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,10" Click="BtnViewCollection_Click" />
        </Grid>

    </Grid>
</Page>
