<Window x:Class="GameThing.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameThing"
        mc:Ignorable="d"
        Title="GameThing"
        Height="700" Width="1000" MinHeight="600" MinWidth="800"
        WindowState="Maximized" WindowStyle="None"
        Cursor="None"
        Closed="Window_Closed">
    <Grid Background="#000">

        <MediaElement x:Name="SplashVideo" Source="{Binding VideoSource}" MediaEnded="SplashVideo_MediaEnded" />

    </Grid>
</Window>
